version: '3'
services:
  # host with cross compilers
  build-host:
    image: elijahru/distcc-cross-compiler-host-{{ distro|slugify }}:v0.5.1-amd64
    ports:
      - 3603:3603 # i386
      - 3604:3604 # amd64
      - 3607:3607 # arm32v7
      - 3608:3608 # arm64v8
      - 3610:3610 # ppc64le
  {% for arch in archs %}
  {% for nim_version in nim_versions %}
  {{ nim_version | image_slug(distro_slug, arch) }}:
    image: elijahru/nim:{{ nim_version | image_slug(distro_slug, arch) }}
    command: /bin/bash
  {% endfor %}
  {% endfor %}
