version: '3'
services:
  # host with cross compilers
  build-host:
    image: elijahru/distcc-cross-compiler-host-{{ distro_slug }}:latest
    ports:
      - 3704:3704 # amd64
      - 3707:3707 # arm32v7
      - 3708:3708 # arm64v8
  {% for arch in archs %}
  {% for nim_version in nim_versions %}
  {{ nim_version | image_slug(distro_slug, arch) }}:
    image: elijahru/nim:{{ distro_slug | image_slug(nim_version, arch) }}
    command: /bin/bash /scripts/test.sh {{ nim_version }} {{ arch }}
  {% endfor %}
  {% endfor %}
